<%- include('partials/header.ejs') %>
<div class="container d-flex justify-content-center">
<div class="col-8 d-flex justify-content-center align-items-center post-form m-5">

<form action="/edit/<%=postId%>" method="POST">
    <h1>Edit existing post</h1>
    <div class="form-group">
        <label>Enter post name</label>
        <input class = "form-control" type="text" name="post-title" value="<%=title%>">
    </div>
    <div class="form-group post-content-field">
        <label>Enter post content</label>
        <textarea class="form-control"  name="post-content" maxlength="<%= maxLength %>"><%= content %></textarea>
    </div>
    <div class="d-flex justify-content-center pt-3 pb-3">
    <button type="submit" class="post-controls " onclick="return confirm('Are you sure?')">Apply</button>
    </div>  
</form>
</div>
</div>
<%- include('partials/footer.ejs') %>