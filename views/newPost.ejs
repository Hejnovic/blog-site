<%- include('partials/header.ejs') %>
<div class="container d-flex justify-content-center align-items-center">
<div class="col-8 d-flex justify-content-center align-items-center post-form m-5" >
<form action="/new-post" method="POST">
    <h1>New post</h1>
    <div class="form-group">
        <label>Enter post name</label>
        <input class = "form-control" type="text" placeholder="Title..." name="post-title" maxlength="50">
    </div>
    <div class="form-group post-content-field" >
        <label>Enter post content</label>
        <textarea class="form-control"  placeholder="Post content..." name="post-content" maxlength="<%= maxLength %>"></textarea>
        <input hidden name="post-id">
    </div>
    <div  class="d-flex justify-content-center pt-3 pb-3">
    <button type="submit" class="post-controls">Publish</button>
    </div>
</form>
</div>
</div>
<%- include('partials/footer.ejs') %>